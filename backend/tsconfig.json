{
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "target": "ES2022",
    "outDir": "build",
    "rootDir": ".",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "server.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
